<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/custom_star_layout"
    >

    <TextView
        android:id="@+id/answer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black" />

    <RatingBar
        android:id="@+id/startratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/answer_title"
        android:layout_margin="4dp"
        android:isIndicator="false"
        android:progressDrawable="@drawable/ratingbar"
        android:numStars="5"
        android:rating="0.0"
        android:stepSize="0.5" />
     <View
        android:id="@+id/line_break"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/startratingBar"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="0dp"
		android:layout_marginRight="3dp"
        android:background="@color/actionbar_separator"/>

</RelativeLayout>