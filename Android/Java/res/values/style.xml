<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Layout.Vertical">
        <item name="android:background">#FAFAFA</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Layout.Vertical.Table">
        <item name="android:stretchColumns">1</item>
    </style>

    <style name="Layout.Vertical.Scroll"></style>

    <style name="Layout.Vertical.Linear"></style>

    <style name="Layout.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Layout.Horizontal.Table">
        <item name="android:stretchColumns">1</item>
    </style>

    <style name="View">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="View.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_all_elements</item>
        <item name="android:background">@drawable/spinner_default_holo_light</item>
        <item name="android:popupBackground">@drawable/spinner_normal</item>
    </style>

    <style name="View.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_all_elements</item>
        <item name="android:layout_weight">0</item>
        <item name="android:padding">@dimen/padding_all_elements</item>
        <item name="android:background">@drawable/button_layout</item>
    </style>

    <style name="View.Button.Radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_all_elements</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:padding">@dimen/padding_all_elements</item>
    </style>

    <style name="View.Button.Gone">
        <item name="android:visibility">gone</item>
    </style>

    <style name="View.Button.Confirm">
        <item name="android:text">@string/button_confirm_adding</item>
    </style>

    <style name="View.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_all_elements</item>
        <item name="android:padding">@dimen/padding_all_elements</item>
    </style>

    <style name="View.Text.Label">
        <item name="android:textSize">@dimen/text_size_label</item>
    </style>

    <style name="View.Text.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="View.List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_all_elements</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:longClickable">true</item>
        <item name="android:padding">@dimen/padding_all_elements</item>
    </style>

    <style name="View.List.Clickable">
        <item name="android:clickable">true</item>
    </style>

    <style name="View.List.Clickable.Long">
        <item name="android:longClickable">true</item>
    </style>

    <style name="Edit">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_all_elements</item>
    </style>

    <style name="Edit.Text">
        <item name="android:ems">8</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:drawable/editbox_background_normal</item>
        <item name="android:textSize">@dimen/text_size_input</item>
        <item name="android:maxLength">100</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Edit.Number">
        <item name="android:ems">8</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:drawable/editbox_background_normal</item>
        <item name="android:textSize">@dimen/text_size_input</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">6</item>
    </style>

    <dimen name="button_size_height">45dp</dimen>
    <dimen name="list_size_height">500dp</dimen>
    <dimen name="input_size_height">50dp</dimen>
    <dimen name="text_size_label">15dp</dimen>
    <dimen name="text_size_input">15dp</dimen>
    <dimen name="text_size_title">20dp</dimen>
    <dimen name="title_size_height">50dp</dimen>
    <dimen name="label_size_height">50dp</dimen>
    <dimen name="icon_size_square_checked">35dp</dimen>
    <dimen name="icon_padding_checked">5dp</dimen>
    <dimen name="padding_all_elements">5dp</dimen>
    <dimen name="margin_left_all_elements">25dp</dimen>
    <dimen name="stripline_margin_bottom">15dp</dimen>
    <dimen name="stripline_line_height">1dp</dimen>
    <dimen name="invisible_stripline_line_height">0dp</dimen>
    <dimen name="widget_padding_layout_vertical">7dp</dimen>
    <dimen name="widget_padding_layout_horizontal">5dp</dimen>

    <color name="greyed_text_color">#AAAAAA</color>
    <color name="text_color">#4D4D4D</color>
    <color name="widget_title_color">#F8F8F8</color>

</resources>