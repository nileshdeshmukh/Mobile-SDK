<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multiSelect"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingLeft="10dp" 
    android:paddingRight="5dp">

    <TextView
        android:id="@+id/surveyQuestion"
        style="@style/SurveyOptionTitle" />

    <ImageView
        android:id="@+id/imgRate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/matrix_imgview_height"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_app_text_contrast"
            android:textStyle="bold" />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isChangedIndicatore"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@drawable/check_i"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/rating_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:textStyle="normal"
        android:visibility="visible"
        android:textColor="@color/color_app_text_contrast" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            android:progressDrawable="@drawable/styled_progress"
            android:thumb="@drawable/seekbar_pointer"
            android:thumbOffset="6dp" />

        <TextView
            android:id="@+id/progerss_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_app_text_contrast"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>