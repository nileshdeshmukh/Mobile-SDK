<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:gravity="left|center"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/surveyIcon"
        style="@style/ListViewIcon" >
    </ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left|center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/surveyHeader"
            style="@style/ListHeader" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/surveySubtitle"
                style="@style/ListSubTitle"
                android:layout_width="0dp"
                android:layout_weight="1" >
            </TextView>

            <TextView
                android:id="@+id/surveyTimeStamp"
                style="@style/ListSubTitle"
                android:layout_gravity="right" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/profileEditIcon"
        style="@style/ListViewIcon"
        android:gravity="right|center"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_right" >
    </ImageView>

</LinearLayout>